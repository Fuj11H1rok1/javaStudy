					System.out.println("グー[0]チョキ[1]パー[2]からもう一度入力してみよう！");
					cpwin ++;
				}
			
			
			
			}
		if( cpwin == 3 )
		{
			System.out.println("CPが先に三回勝ちました。");
		}
		else if( youwin == 3 )
		{
			System.out.println("あなたが先に三回勝ちました。");
			
		}
