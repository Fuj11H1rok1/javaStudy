 		cphandList.add("パー");
 		cphandList.add("パー");
 		cphandList.add("パー");
		
		int cphand = cpg + cpc + cpp;
		
		
		
		
		while((yourhand > 0) && (cphand > 0))
			{
				System.out.println("チェック。セット……");
				you = s.nextInt();
