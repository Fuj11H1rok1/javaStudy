 		myhandList.add("パー");
 		System.out.println(myhandList);
		int myhand = myhandList.size();
//		プレイヤーの持ち札『グー(g)チョキ(c)パー(p)』各4枚
		ArrayList<String> cphandList = new ArrayList<String>();
		 
 		cphandList.add("グー");
 		cphandList.add("グー");
 		cphandList.add("グー");
 		cphandList.add("グー");
